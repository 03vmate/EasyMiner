<Window x:Class="EasyMiner.xmrigOutput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyMiner"
        mc:Ignorable="d"
        Title="Miner Log" Height="467" Width="800">
    <Grid Background="Black">
        <ScrollViewer x:Name="scrollv">
            <TextBlock x:Name="textblock" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Text="" TextWrapping="Wrap" Background="Black" Foreground="WhiteSmoke"/>
        </ScrollViewer>
        <Button Content="Copy to Clipboard" Margin="0,10,23,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="118" Click="Button_Click_1" Background="#444444" Foreground="White"/>
    </Grid>
</Window>
