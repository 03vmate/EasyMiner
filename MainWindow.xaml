<Window x:Class="EasyMiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyMiner"
        mc:Ignorable="d"
        Title="EasyMiner" Height="450" Width="620"
        Closing="onClosing" 
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>

        <VisualBrush x:Key="_menu" Visual="{StaticResource menu}" />
        <Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="border" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True"></Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource _menu}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource _menu}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Background="Black">
            <!-- Main Panel -->
            <Grid HorizontalAlignment="Right" Width="540">
                <Grid x:Name="mineGrid">
                    <Grid Height="310" HorizontalAlignment="Center" VerticalAlignment="Top">
                        <Grid Width="500px" Height="110px" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 20">
                            <TextBox x:Name="addressBox" HorizontalAlignment="Center" VerticalContentAlignment="Center"  Text="Enter you uPlexa Address Here" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Height="37" Background="#BBBBBB"  PreviewMouseDown="addressBox_PreviewMouseDown"/>
                            <Grid x:Name="priorityGrid" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="60" Width="150">
                                <Label Content="Mining CPU Priority" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <ComboBox x:Name="priorityBox" HorizontalAlignment="Center" Background="#BBBBBB"  VerticalAlignment="Bottom" Width="120" FontSize="16" Height="28">
                                    <ComboBoxItem>Low</ComboBoxItem>
                                    <ComboBoxItem IsSelected="True">Normal</ComboBoxItem>
                                    <ComboBoxItem>High</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid x:Name="threadsGrid" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="60" Width="150">
                                <Label Content="Mining Threads" Foreground="White" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                <ComboBox x:Name="threadsBox" Background="#BBBBBB" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="120" FontSize="16" Height="28">
                                </ComboBox>
                            </Grid>
                            <Grid x:Name="workerGrid" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="60" Width="150">
                                <Label Content="Worker Name" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="14"/>
                                <TextBox x:Name="workerBox" HorizontalAlignment="Center" VerticalContentAlignment="Center" Text="MyWorker" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" Height="28" Background="#BBBBBB"/>
                            </Grid>
                        </Grid>
                        <Grid HorizontalAlignment="Center" Width="500" Height="133" VerticalAlignment="Bottom">
                            <Grid x:Name="hrGrid" Background="#444444" VerticalAlignment="Top" HorizontalAlignment="Left" Height="65" Width="165">
                                <Label Content="Hashrate" Foreground="White" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                                <Label x:Name="hr" Content="Not Mining" Foreground="White" FontSize="22" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Label>
                            </Grid>
                            <Grid x:Name="hr1mGrid" Background="#444444" VerticalAlignment="Top" HorizontalAlignment="Center" Height="65" Width="165">
                                <Label Content="60s Hashrate" Foreground="White" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                                <Label x:Name="hr60" Content="Not Mining" Foreground="White" FontSize="22" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Label>
                            </Grid>
                            <Grid x:Name="hr15mGrid" Background="#444444" VerticalAlignment="Top" HorizontalAlignment="Right" Height="65" Width="165">
                                <Label Content="15m Hashrate" Foreground="White" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                                <Label x:Name="hr15" Content="Not Mining" Foreground="White" FontSize="22" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Label>
                            </Grid>
                            <Grid x:Name="acceptedGrid" Background="#444444" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="65" Width="165">
                                <Label Content="Accepted Shares" Foreground="White" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                                <Label x:Name="acceptedShares" Content="Not Mining" Foreground="White" FontSize="22" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Label>
                            </Grid>
                            <Grid x:Name="refusedGrid" Background="#444444" VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="65" Width="165">
                                <Label Content="Refused Shares" Foreground="White" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                                <Label x:Name="refusedShares" Content="Not Mining" Foreground="White" FontSize="22" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Label>
                            </Grid>
                            <Grid x:Name="diffGrid" Background="#444444" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="65" Width="165">
                                <Label Content="Difficulty" Foreground="White" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                                <Label x:Name="diff" Content="Not Mining" Foreground="White" FontSize="22" VerticalAlignment="Bottom" HorizontalAlignment="Center"></Label>
                            </Grid>
                        </Grid>
                    </Grid>
                    <Button x:Name="startMining" Content="Start Mining" HorizontalAlignment="Left" Margin="432,364,0,0" VerticalAlignment="Top" Background="#444444" Foreground="White" Height="40" Width="88" Click="startMining_Click"/>
                    <Button x:Name="StopMining" Content="Stop Mining" HorizontalAlignment="Left" Margin="339,364,0,0" VerticalAlignment="Top" Background="#444444" Foreground="White" Height="40" Width="88" Click="stopMining_Click"/>
                    <Button x:Name="showOutput" Content="Show Log" HorizontalAlignment="Left" Margin="20,364,0,0" VerticalAlignment="Top" Background="#444444" Foreground="White" Height="40" Width="88" Click="showLog_Click"/>
                </Grid>
                <Grid x:Name="statsGrid">
                </Grid>
                <Grid x:Name="helpGrid">
                </Grid>
            </Grid>
            <!-- Left Panel -->
            <Grid x:Name="navPanel" HorizontalAlignment="Left" Width="64" Background="#444444">
                <StackPanel x:Name="stackPanel">
                    <Grid Height="64">
                        <TextBlock Grid.Row="1" Grid.Column="0" Margin="73, 0, 0, 0" Text="EasyMiner" Foreground="White" FontSize="24" Background="Transparent" HorizontalAlignment="Left" VerticalAlignment="Center">
                        </TextBlock>
                        <ToggleButton x:Name="toggleButton" Grid.Column="0" HorizontalAlignment="Left" Height="24" Width="24" Margin="20,20,20,20" Style="{StaticResource tb_style}">
                            <ToggleButton.Background>
                                <VisualBrush Stretch="Fill" Visual="{StaticResource menu}" />
                            </ToggleButton.Background>
                            <ToggleButton.Triggers>
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HideStackPanel">
                                            <DoubleAnimation Storyboard.TargetName="navPanel" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="200" To="64" Duration="0:0:0.25">

                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="ShowStackPanel">
                                            <DoubleAnimation Storyboard.TargetName="navPanel" Storyboard.TargetProperty="Width" BeginTime="0:0:0" From="64" To="200" Duration="0:0:0.25">

                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ToggleButton.Triggers>
                        </ToggleButton>
                    </Grid>
                    <ListView x:Name="listView" Background="Transparent" BorderBrush="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="listView_SelectionChanged">
                        <!-- Mine -->
                        <ListViewItem x:Name="menuMine" HorizontalAlignment="Left" Margin="0,15,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="256">
                                <Image Height="24" Width="24" Source="{StaticResource mine}" Margin="12, 0, 0, 0"></Image>
                                <TextBlock Text="Mining" Margin="25,0,0,0" Foreground="White" FontSize="18"></TextBlock>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_mine" Content="Mine"></ToolTip>
                            </ListViewItem.ToolTip>
                        </ListViewItem>
                        <!-- Stats -->
                        <ListViewItem x:Name="menuStats" HorizontalAlignment="Left" Margin="0,15,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="256">
                                <Image Height="24" Width="24" Source="{StaticResource stats}" Margin="12, 0, 0, 0"></Image>
                                <TextBlock Text="Stats" Margin="25,0,0,0" Foreground="White" FontSize="18"></TextBlock>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_stats" Content="Stats"></ToolTip>
                            </ListViewItem.ToolTip>
                        </ListViewItem>
                        <!-- Help -->
                        <ListViewItem x:Name="menuHelp" HorizontalAlignment="Left" Margin="0,15,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="256">
                                <Image Height="24" Width="24" Source="{StaticResource help}" Margin="12, 0, 0, 0"></Image>
                                <TextBlock Text="Help" Margin="25,0,0,0" Foreground="White" FontSize="18"></TextBlock>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_help" Content="Help"></ToolTip>
                            </ListViewItem.ToolTip>
                        </ListViewItem>
                        <!-- Exit -->
                        <ListViewItem x:Name="menuExit" HorizontalAlignment="Left" Margin="0,15,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="256">
                                <Image Height="24" Width="24" Source="{StaticResource exit}" Margin="12, 0, 0, 0"></Image>
                                <TextBlock Text="Exit" Margin="25,0,0,0" Foreground="White" FontSize="18"></TextBlock>
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_exit" Content="Exit"></ToolTip>
                            </ListViewItem.ToolTip>
                        </ListViewItem>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <Border x:Name="Bd" Height="50" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                                </ContentPresenter>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True"></Condition>
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Background" TargetName="Bd" Value="#404D5B"></Setter>
                                                    <Setter Property="BorderBrush" TargetName="Bd" Value="#404D5B"></Setter>
                                                </MultiTrigger>
                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
